{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],

      "~app": ["./app"],
      "~app/*": ["./app/*"],

      "~processes": ["./processes"],
      "~processes/*": ["./processes/*"],

      "~pages": ["./pages"],
      "~pages/*": ["./pages/*"],

      "~widgets": ["./widgets"],
      "~widgets/*": ["./widgets/*"],

      "~features": ["./features"],
      "~features/*": ["./features/*"],

      "~entities": ["./entities"],
      "~entities/*": ["./entities/*"],

      "~shared": ["./shared"],
      "~shared/*": ["./shared/*"]

    }
  }
}
